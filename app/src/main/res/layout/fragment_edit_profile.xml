<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/signin"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_alignStart="@+id/itemCardView"
        android:fillViewport="false"
        android:layout_alignLeft="@+id/itemCardView"
        tools:ignore="NotSibling"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:paddingTop="80dp"
            android:id="@+id/itemCardView"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginTop="100dp"
            android:padding="3dp"
            android:elevation="4dp"
            android:translationZ="5dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center|center_horizontal"

            android:focusableInTouchMode="true"
            android:background="#ffffff"
            card_view:cardCornerRadius="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            >


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="482dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                tools:context=".RegisterActivity">

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:text="Edit Personal Details"
                    android:textColor="#002663"
                    android:textSize="25dp"
                    android:textStyle="bold" />


                    <EditText
                        android:focusable="false"
                        android:id="@+id/etName"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                        android:ems="10"
                        android:inputType="textFilter"

                        android:paddingTop="25dp"
                        android:textColorHint="#000000"
                        android:textSize="16dp"
                        android:theme="@style/MyEditTextTheme"
                        tools:layout_editor_absoluteX="98dp"
                        tools:layout_editor_absoluteY="129dp" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etMobile"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:digits="1234567890"
                        android:ems="10"
                        android:hint="Mobile*"

                        android:inputType="phone"
                        android:maxLength="10"
                        android:textColorHint="#000000"
                        android:textSize="16dp"
                        android:theme="@style/MyEditTextTheme"
                        tools:layout_editor_absoluteX="98dp"
                        tools:layout_editor_absoluteY="129dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etEmaild"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:ems="10"
                        android:hint="Email*"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890@."

                        android:inputType="textFilter"

                        android:textColorHint="#000000"
                        android:textSize="16dp"
                        android:theme="@style/MyEditTextTheme"
                        tools:layout_editor_absoluteX="98dp"
                        tools:layout_editor_absoluteY="129dp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etVehicfleNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etVehicleNo"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:ems="10"
                        android:hint="Vehicle No"
                        android:textColorHint="#000000"
                        android:textSize="16dp"
                        android:inputType="textFilter"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"

                        android:theme="@style/MyEditTextTheme"
                        tools:layout_editor_absoluteX="98dp"
                        tools:layout_editor_absoluteY="129dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etVehModdel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etVehModel"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:ems="10"
                        android:hint="Vehicle Model"
                        android:textColorHint="#000000"
                        android:textSize="16dp"
                        android:inputType="textFilter"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"

                        android:theme="@style/MyEditTextTheme"
                        tools:layout_editor_absoluteX="98dp"
                        tools:layout_editor_absoluteY="129dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etAddfress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etAddress"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890., -/"
                        android:ems="10"
                        android:hint="Address"
                        android:inputType="textFilter"
                        android:textColorHint="#000000"
                        android:textSize="16dp"
                        android:theme="@style/MyEditTextTheme"
                        tools:layout_editor_absoluteX="98dp"
                        tools:layout_editor_absoluteY="129dp" />
                </android.support.design.widget.TextInputLayout>


                <Button
                    android:id="@+id/btnRegister"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="106dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_button"
                    android:onClick="onClick"
                    android:text="SAVE"
                    android:textColor="@color/colorPrimary"


                    />


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>

</RelativeLayout>