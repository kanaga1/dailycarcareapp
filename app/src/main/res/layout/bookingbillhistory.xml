<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:paddingTop="80dp"
        android:id="@+id/itemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginTop="15dp"
        android:padding="3dp"
        android:elevation="4dp"
        android:translationZ="5dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center|center_horizontal"

        android:focusableInTouchMode="true"
        android:background="#ffffff"
        card_view:cardCornerRadius="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >


            <TextView
                android:id="@+id/topview"
                android:layout_width="192dp"
                android:layout_height="39dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="95dp"
                android:textStyle="bold"
                android:text="Booked Date : "
                android:textSize="20dp"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/dateview"
                android:layout_width="188dp"
                android:layout_height="39dp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="225dp"
                android:text="11/21/2019 "
                android:textSize="20dp"
                android:layout_marginLeft="200dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/type"
                android:layout_width="105dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="6dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="40dp"
                android:textSize="15dp"
                android:text="Package Type : "
                android:textColor="#000000" />
            <TextView
                android:id="@+id/p_type"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="40dp"
                android:textSize="15dp"

                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/total_wash"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="70dp"
                android:textSize="15dp"
                android:text="Vehicle Type   : "
                android:textColor="#000000" />
            <TextView
                android:id="@+id/v_type"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="70dp"
                android:textSize="15dp"

                android:text=" "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/car"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="100dp"
                android:textSize="15dp"
                android:text="Car Model       : "
                android:textColor="#000000" />
            <TextView
                android:id="@+id/c_model"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="100dp"
                android:textSize="15dp"

                android:text=" "
                android:textColor="#000000" />



            <TextView
                android:id="@+id/time"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="130dp"
                android:textSize="15dp"
                android:text="Booked Time  : "
                android:textColor="#000000" />
            <TextView
                android:id="@+id/b_time"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="130dp"
                android:textSize="15dp"

                android:text=" "
                android:textColor="#000000" />


            <Button
                android:id="@+id/delete"
                android:layout_width="108dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="129dp"
                android:layout_marginLeft="129dp"
                android:layout_marginTop="169dp"
                android:background="@drawable/delete_button"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="DELETE"
                android:textColor="@color/colorPrimary"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="319dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>